<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.animation.MainActivity">

    <ImageView
        android:id="@+id/frame_animation_imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/view_animation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ViewAnimation"
        app:layout_constraintTop_toBottomOf="@+id/frame_animation_imageView" />

    <TextView
        android:id="@+id/property_animation_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PropertyAnimation"
        app:layout_constraintTop_toBottomOf="@+id/view_animation_textView" />

    <Button
        android:id="@+id/settings_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:onClick="goSettings"
        app:layout_constraintTop_toBottomOf="@+id/property_animation_textView" />

</android.support.constraint.ConstraintLayout>
